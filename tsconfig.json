{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "lib": ["DOM", "ESNext"],
    "module": "commonjs",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"],
    },
    "sourceMap": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "declarationDir": "./dist/@types",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}
